{erl_opts, [
    debug_info,
    {i, "./apps/game_protobuf/include/proto_dir"}
  ]}.
{deps, [
    {cowboy, {git,"https://github.com/Naupio/cowboy",{branch, "master"}}},
    {lager, {git,"https://github.com/Naupio/lager",{branch, "master"}}},
    {gproc, {git,"https://github.com/Naupio/gproc",{branch, "master"}}},
    {poolboy, {git,"https://github.com/Naupio/poolboy",{branch, "master"}}},
    {jsx, {git,"https://github.com/Naupio/jsx",{branch, "master"}}},
    {np_hook, {git,"https://github.com/Naupio/np_hook",{branch, "master"}}},
    {np_tcp, {git,"https://github.com/Naupio/np_tcp",{branch, "master"}}}
]}.

{dist_node, [
    {setcookie, 'game_server_cookie'},
    {name, 'game_server@127.0.0.1'}
]}.

{relx, [{release, { game_server, "0.1.0" },
         [game_server,
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]
}.
